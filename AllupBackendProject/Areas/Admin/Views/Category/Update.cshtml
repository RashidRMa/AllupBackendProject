@model Category
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
  <div class="card">
    <div class="card-body">
      <h4 class="card-title">Update SubCategory Table</h4>
      <form class="forms-sample"  method="post" enctype="multipart/form-data">
        <div class="form-group">
          <label asp-for="Name"></label>
          <input asp-for="Name" class="form-control" placeholder="Name" autocomplete="off" spellcheck="false">
          <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
        <label asp-for="Parent"></label>
        <select asp-items="@ViewBag.Categories" asp-for="ParentId" class="form-select" aria-label="Default select example">
          <option selected>Open this select menu</option>
          
        </select>
        </div>
        <div class="form-group">
          <label asp-for="Image"></label>
          <input asp-for="Image" class="form-control">
          <span class="text-danger" asp-validation-for="Image"></span>
        </div>


        <button type="submit" class="btn btn-primary me-2" >Submit</button>
        <a class="btn btn-dark" asp-action="index">Go back</a>
      </form>
    </div>
  </div>
</div>

