@model List<Category>

    <!--Adminpanel Category Index-->
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<div class="container">
    <div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Category Table</h4>
                  <p class="card-description">
                    <a class="btn btn-outline-warning text-dark" asp-controller="category" asp-action="create">Add Category</a>
                  </p>
                  <div class="table-responsive">
                    <table class="table">
                      <thead>
                        <tr>
                          <th>No</th>
                          <th>Category</th>
                          <th>SubCategory</th>
                          <th>Settings</th>
                        </tr>
                      </thead>
                      <tbody>
                        @foreach (var item in Model)
                            {
                                count++;
                               <tr>
                                    <td>@count</td>
                                    <td>@(item.ParentId==null ? item.Name : "-")</td>
                                    <td style="white-space: unset;"> @(item.ParentId!=null ? item.Name : "-")</td>
                                    <td class="d-flex">
                                        <a asp-action="update" asp-route-id="@item.Id">
                                            <i class="mdi mdi-refresh icon-md"></i>
                                        </a>
                                        <a asp-action="detail" asp-route-id="@item.Id">
                                            <i class="mdi mdi-file-document icon-md"></i>
                                        </a>
                                        <a asp-action="delete" asp-route-id="@item.Id">
                                            <i class="mdi mdi-delete icon-md"></i>
                                        </a>
                                    </td>
                               </tr>
                            }
                        
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
</div>
</div>

