@model Category
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Basic form elements</h4>
                  
                  <form asp-action="create" class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label>Select Main Category</label>
                            <select asp-for="ParentId" class="js-example-basic-single w-100 form-control">
                                <option value="" selected disabled hidden>Choose here</option>
                                @foreach (var item in ViewBag.Categories)
                              {
                                if (item.ParentId==null)
                                 {
                                    <option value="@item.Id">@item.Name</option>
                                 }
                              }
                            </select>
                    </div>
                    <div class="form-group">
                      <label asp-for="Name" for="exampleInputName1">SubCategory Name</label>
                      <input type="text" class="form-control" id="exampleInputName1" placeholder="Name" autocomplete="off">
                    </div>
                    <div class="form-group">
                      <label>File upload</label>
                      @*<input type="file" name="img[]" class="file-upload-default">*@
                      <div class="input-group col-xs-12">
                        <input asp-for="Image" type="file" class="form-control file-upload-info" placeholder="Upload Image">
                       
                      </div>
                    </div>
                    <button type="submit" class="btn btn-primary me-2" >Submit</button>
                    
                  </form>
                </div>
              </div>
            </div>
