
@using Microsoft.AspNetCore.Identity
@model List<IdentityRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    int count = 0;

    
}

<div class="container">
    <div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Role Table</h4>
                  <a class="btn btn-outline-warning text-dark" asp-controller="role" asp-action="create">Add Role</a>
                  <div class="table-responsive">
                    <table class="table">
                      <thead>
                        <tr>
                          <th>No</th>
                          <th>Name</th>
                          <th>Settings</th>
                        </tr>
                      </thead>
                      <tbody>
                        @foreach (IdentityRole item in Model)
                            {
                                count++;
                               <tr>
                                    <td>@count</td>
                                    <td>@item.Name</td>
                                    <td class="d-flex">
                                        <a asp-action="update" asp-route-id="@item.Id">
                                            <i class="mdi mdi-refresh icon-md " @(User.Identity.Name==item.Name?"style='display:none;'":"")></i>
                                        </a>
                                        <a asp-action="detail" asp-route-id="@item.Id">
                                            <i class="mdi mdi-file-document icon-md"></i>
                                        </a>
                                        <a asp-action="delete" asp-route-id="@item.Id">
                                            <i class="mdi mdi-delete icon-md" @(User.Identity.Name==item.Name?"hidden":"")></i>
                                        </a>
                                    </td>
                               </tr>
                            }
                        
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
</div>
</div>
