@model Product
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="col-12 grid-margin stretch-card">
  <div class="card">
    <div class="card-body">
      <h4 class="card-title">Create Table</h4>
      <form class="forms-sample"  method="post" enctype="multipart/form-data">
        <div class="form-group">
          <label asp-for="Name"></label>
          <input asp-for="Name" class="form-control" placeholder="Name" autocomplete="off" spellcheck="false">
          <span class="text-danger" asp-validation-for="Name"></span>
        </div>
        <div class="form-group">
          <label asp-for="Price"></label>
          <input asp-for="Price" class="form-control" placeholder="Price" autocomplete="off" spellcheck="false">
          <span class="text-danger" asp-validation-for="Price"></span>
        </div>
        <div class="form-group">
          <label asp-for="StockCount"></label>
          <input asp-for="StockCount" class="form-control" placeholder="Count" autocomplete="off" spellcheck="false">
          <span class="text-danger" asp-validation-for="StockCount"></span>
        </div>
        <div class="form-group">
        <label asp-for="Category"></label>
        <select asp-items="@ViewBag.Categories" asp-for="CategoryId" class="form-select" aria-label="Default select example">
          <option selected>Open this select menu</option>
          
        </select>
        </div>
       @* <div class="form-group">
          <label asp-for=""></label>
          <input asp-for="Photo" class="form-control">
          <span class="text-danger" asp-validation-for="Photo"></span>
        </div>*@


        <button type="submit" class="btn btn-primary me-2" >Submit</button>
        <a class="btn btn-dark" asp-action="index">Go back</a>
      </form>
    </div>
  </div>
</div>