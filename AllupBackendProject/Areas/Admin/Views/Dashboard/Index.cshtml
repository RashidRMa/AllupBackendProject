@model List<Order>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<main role="main" class="main-content">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-12">
                <h2 class="mb-2 page-title" style="text-align :center">Orders</h2>
                <div class="row my-4">
                    <!-- Small table -->
                    <div class="col-md-12">
                        <div class="card shadow">
                            <div class="card-body">
                                <!-- table -->
                                <table class="table datatables" id="dataTable-1">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Purchase Date</th>
                                            <th>Customer</th>
                                            <th>Phone</th>
                                            <th>Ship Adress</th>
                                            <th>Location</th>
                                            <th>Total</th>
                                            <th>Payment</th>
                                            <th>Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.Id</td>
                                                <td>@String.Format("{0:dd MMM yyyy HH:mm}",item.CreatedAt)</td>
                                                <td>@item.Firstname @item.Lastname</td>
                                                <td>@item.Phone</td>
                                                <td>@item.Address</td>
                                                <td>@item.Country / @item.City</td>
                                                <td>@item.TotalPrice</td>
                                                <td>@item.PaymantMethod</td>
                                                @switch (item.OrderStatus)
                                                {
                                                    case OrderStatus.Pending:
                                                        <td style="height:20px;width:10px;"><span class="badge badge-warning"><i class="mdi mdi-timer-sand">Pending</i></span></td>
                                                        break;
                                                    case OrderStatus.Approved:
                                                        <td style="height:20px;width:10px;"><span class="badge badge-success"><i class="mdi mdi-check">Approved</i></span></td>
                                                        break;
                                                    case OrderStatus.Finished:
                                                        <td style="height:20px;width:10px;"><span class="badge badge-info"><i class="mdi mdi-truck-delivery">Shipped</i></span></td>
                                                        break;
                                                    case OrderStatus.Shipped:
                                                        <td style="height:20px;width:10px;"><span class="badge badge-primary"><i class="mdi mdi-thumb-up-outline">Finished</i></span></td>
                                                        break;
                                                    case OrderStatus.Canceled:
                                                        <td style="height:20px;width:10px;"><span class="badge badge-danger"><i class="mdi mdi-close">Canceled</i></span></td>
                                                        break;
                                                    default:
                                                        break;
                                                }
                                                @*<td style="text-align:center">
                                                    <button class="btn btn-sm dropdown-toggle more-horizontal" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                        <span class="text-muted sr-only">Action</span>
                                                    </button>
                                                    <div style="text-align:center;" class="dropdown-menu dropdown-menu-right">
                                                        <a style="margin: 10px; width: 150px;height: 25px; text-align: center; background-color: #2F429E; color: white; border-radius: 5px; margin: 10px;" class="dropdown-item" asp-action="statuscontrol" asp-route-status="Pending" asp-route-id="@item.Id">Pending</a>
                                                        <a style="margin: 10px; width: 150px;height: 25px; text-align: center; background-color: #17A2B8; color: white; border-radius: 5px; margin: 10px;" class="dropdown-item" asp-action="statuscontrol" asp-route-status="Approved" asp-route-id="@item.Id">Approved</a>
                                                        <a style="margin: 10px; width: 150px; height: 25px; text-align: center; background-color: #1B8931; color: white; border-radius: 5px; margin: 10px;" class="dropdown-item" asp-action="statuscontrol" asp-route-status="Finished" asp-route-id="@item.Id">Finished</a>
                                                        <a style="margin: 10px; width: 150px; height: 25px; text-align: center; background-color: #5F5F5F; color: white; border-radius: 5px; margin: 10px;" class="dropdown-item" asp-action="statuscontrol" asp-route-status="Shipped" asp-route-id="@item.Id">Shipped</a>
                                                        <a style="margin: 10px; width: 150px; height: 25px; text-align: center; background-color: #FF5A4D; color: white; border-radius: 5px; margin: 10px;" class="dropdown-item" asp-action="statuscontrol" asp-route-status="Canceled" asp-route-id="@item.Id">Canceled</a>
                                                    </div>
                                                </td>*@
                                                <td>
                                                    <div class="dropdown">
                                                     <button class="btn btn-success  dropdown-toggle" type="button" id="dropdownMenuIconButton1" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                        <i class="mdi mdi-lead-pencil"></i>
                                                     </button>
                                                      <div class="dropdown-menu" aria-labelledby="dropdownMenuIconButton1">
                                                        <a class="dropdown-item" asp-action="statuscontrol" asp-route-status="Pending" asp-route-id="@item.Id">Pending</a>
                                                        <a class="dropdown-item" asp-action="statuscontrol" asp-route-status="Approved" asp-route-id="@item.Id">Approved</a>
                                                        <a class="dropdown-item" asp-action="statuscontrol" asp-route-status="Shipped" asp-route-id="@item.Id">Shipped</a>
                                                        <a class="dropdown-item" asp-action="statuscontrol" asp-route-status="Finished" asp-route-id="@item.Id">Finished</a>
                                                        <a class="dropdown-item" asp-action="statuscontrol" asp-route-status="Canceled" asp-route-id="@item.Id">Canceled</a>
                                                      </div>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div> <!-- simple table -->
                </div> <!-- end section -->
            </div> <!-- .col-12 -->
        </div> <!-- .row -->
    </div> <!-- .container-fluid -->
</main> <!-- main -->

